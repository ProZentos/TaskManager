@model List<TaskManager.Models.Task>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Opgave liste</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i>&nbsp; Opret ny opgave
            </a>
        </div>
    </div><br />


<table  class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Minimums alder
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
                <tr>
                    <td>
                    @obj.Title
                </td>
                <td>
                    @obj.RequiredAge
                </td>
                <td>
                     <a asp-controller="Task" asp-action="Edit" asp-route-id="@obj.Id"
                     class="btn btn-primary mx-2">
                     <i class="bi bi-pencil-fill">&nbsp;Ret</i>
                     </a>
                     <a asp-controller="Task" asp-action="Delete" asp-route-id="@obj.Id"
                     class="btn btn-primary mx-2">
                     <i class="bi bi-trash-fill">&nbsp;Slet</i>
                 </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
